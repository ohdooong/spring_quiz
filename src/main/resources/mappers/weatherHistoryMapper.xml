<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.quiz.lesson05.weather_history.mapper.WeatherHistoryMapper">
	<select id="selectWeatherHistory" resultType="map">
		SELECT
			`id`
			,`date`
			,`weather`
			,`temperatures`
			,`precipitation`
			,`microDust`
			,`windSpeed`
			,`createdAt`
			,`updatedAt`
		FROM
			`weather_history`
	</select>

	<insert id="setWeatherHistory" parameterType="map">
	INSERT INTO `weather_history`
	(
		`date`
		,`weather`
		,`temperatures`
		,`precipitation`
		,`microDust`
		,`windSpeed`
		,`createdAt`
		,`updatedAt`
	)
	VALUES
	(
		#{date},
		#{weather},
		#{temperatures},
		#{precipitation},
		#{microDust},
		now(),
		now()
	
	)
	</insert>


</mapper>